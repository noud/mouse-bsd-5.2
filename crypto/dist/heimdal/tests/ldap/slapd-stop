#!/bin/sh 
# $Heimdal: slapd-stop 20220 2007-02-15 00:11:18Z lha $
# $NetBSD: slapd-stop,v 1.1 2008/03/22 09:42:44 mlelstv Exp $

echo stoping slapd

# kill of old slapd
if [ -f slapd.pid ]; then
    kill `cat slapd.pid`
    sleep 5
fi
if [ -f slapd.pid ]; then
    kill -9 `cat slapd.pid`
    rm -f slapd.pid
    sleep 5
fi

exit 0

